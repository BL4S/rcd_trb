package rcd_v792

author  markus.joos@cern.ch
manager markus.joos@cern.ch

#==========================================================
public
#==========================================================
use TDAQPolicy
use ROSModules
use DFSubSystemItem
use DFDebug
use DFThreads
use ROSMemoryPool
use ROSEventFragment
use ROSBufferManagement
use oh
use vme_rcc


private
#==========================================================
library ReadoutModuleV792	"ModuleV792.cpp DataChannelV792.cpp"
#----------------------------------------------------------
application  v792scope           test/v792scope.cpp
application  v792pedestal        test/v792pedestal.cpp
application  v792calibration     test/v792calibration.cpp
#----------------------------------------------------------
macro v792scopelinkopts            "-lvme_rcc -lgetinput -lrcc_time_stamp"
macro v792pedestallinkopts         "-lvme_rcc -lgetinput -lrcc_time_stamp"
macro v792calibrationlinkopts      "-lvme_rcc -lgetinput -lrcc_time_stamp"
macro ReadoutModuleV792_shlibflags "-lSubSystemItem -lvme_rcc -lDFDebug"	
#==========================================================
document is-generation DataChannelV792Info               -s=../schema namespace="ROS" header_dir="ROSInfo" V792Info.schema.xml

public
#==========================================================
apply_pattern install_libs files="libReadoutModuleV792.so"
apply_pattern install_apps files="v792scope v792pedestal v792calibration"

#----------------------------------------------------------
apply_pattern install_data    name=schema  src_dir="../schema" files="*.xml"
# IS classes
apply_pattern install_headers name=is_info src_dir="$(bin)/ROSInfo" files="*.h" target_dir="../ROSInfo"
#----------------------------------------------------------
## Automated generation of repository db
macro sw.repository.is-info-file.share/data/rcd_v792/V792Info.schema.xml:name "V792 DataChannel IS xml description"

